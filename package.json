{
  "title": "Min Vid",
  "name": "min-vid",
  "version": "0.3.3c",
  "private": true,
  "icon": "resource://min-vid/docs/images/dark-logo.png",
  "description": "Minimize a web video into a small always-on-top panel in Firefox.",
  "homepage": "https://github.com/meandavejustice/min-vid",
  "repository": "meandavejustice/min-vid",
  "main": "index.js",
  "author": "meandave",
  "updateURL": "https://testpilot.firefox.com/files/min-vid/updates.json",
  "engines": {
    "firefox": ">=38.0a1"
  },
  "permissions": {
    "multiprocess": true,
    "unsafe-content-script": true
  },
  "bugs": {
    "url": "https://github.com/meandavejustice/min-vid/issues"
  },
  "scripts": {
    "lint": "eslint . bin/*",
    "build-script": "cross-env NODE_ENV=production browserify app.js -t [ babelify --presets [ react ] ] | uglifyjs -c > data/bundle.js",
    "watch-script": "cross-env NODE_ENV=development watchify app.js -o data/bundle.js -t [ babelify --presets [ react ] ]",
    "start": "npm run dev",
    "watch": "jpm watchpost --post-url http://localhost:8888",
    "dev": "npm run locales && npm run watch-script & npm run watch & http-server -c-1",
    "prepackage": "npm run locales && npm run lint",
    "package": "npm run build-script && jpm xpi && npm run mv-xpi",
    "postpackage": "addons-linter addon.xpi -o text",
    "locales": "node ./bin/locales",
    "mv-xpi": "mv min-vid.xpi addon.xpi",
    "prepush": "npm run package",
    "deploy": "deploy-txp"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "get-video-id": "1.1.0"
  },
  "devDependencies": {
    "addons-linter": "0.15.3",
    "babel": "6.5.2",
    "babel-preset-react": "6.11.1",
    "babelify": "7.3.0",
    "browserify": "13.0.1",
    "classnames": "2.2.5",
    "cross-env": "3.1.3",
    "deep-assign": "2.0.0",
    "deploy-txp": "1.0.7",
    "eslint": "3.6.1",
    "eslint-plugin-react": "6.3.0",
    "glob": "7.1.1",
    "http-server": "0.9.0",
    "husky": "0.11.7",
    "jpm": "1.1.4",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "react-tooltip": "3.0.13",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#b7bb7061503c247393bd0aa8ae9dd80167028a98",
    "watchify": "3.7.0"
  }
}
